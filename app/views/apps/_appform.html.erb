<%= form_for @app do |f| %>
<% if @app.errors.any? %>
        <div class="alert alert-warning alert-dismissible" role="alert">
           <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <% @app.errors.full_messages.each do |message| %>
               <%= message %><br/><br>
            <% end %>
            </div>
            <% end %>

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label 'First name ' %>
      <%= f.text_field :first_name, class: "form-control",:id => 'cap'%>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label 'Last name ' %>
      <%= f.text_field :last_name, class: "form-control", :id => 'cap' %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
     <%= f.label "Father's name " %>
     <%= f.text_field :father, class: "form-control", :id => 'cap' %>
    </div>
  </div>

    <div class="col-md-6">
    <div class="form-group">
      <%= f.label 'Nationality' %>
      <%= f.select :nationality, App::NATIONALITIES,{}, {class: "form-control"} %><br>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label "Mother's first name " %>
      <%= f.text_field :mother_first_name, class: "form-control", :id => 'cap' %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label "Mother's last name " %>
      <%= f.text_field :mother_last_name, class: "form-control", :id => 'cap' %>
    </div>
  </div>


  <div class="col-md-6">
    <div class="form-group">
      <%= f.label 'Date of birth'%><br/>
      <%= f.date_field :date_of_birth, class: "form-control" %>
    </div>
  </div>


    <div class="col-md-6">
    <div class= "form-group">
      <%= f.label 'Gender'%><br>
      <%= f.radio_button :gender, "male" %>
      <%= f.label :gender, "Male", :value => "male" %>
      <%= f.radio_button :gender, "female" %>
      <%= f.label :gender, "Female", :value => "female" %><br><br>
    </div>
  </div>

       <div class="col-md-6">
    <div class="form-group">
        <%= f.label "Email " %><br>
        <%= f.text_field :email, class: "form-control" %>
    </div>
</div>

  <div class="col-md-6">
    <div class="form-group">
        <%= f.label "Phone number " %><br>
        <%= f.text_field :phone, class: "form-control" %>
    </div>
 </div>

  <div class="col-md-6">
    <div class="form-group">
        <%= f.label "Education " %><br>
      <%= f.text_area :education, class: "form-control" %>
    </div>
  </div>


  <div class="col-md-6">
    <div class="form-group">
        <%= f.label "Skills " %><br>
        <%= f.text_area :skills, class: "form-control" %>
    </div>
  </div>

  <div class="col-md-6">
 <div class="form-group">
            <%= f.label "Choose a category" %><br />
            <select id="main-category" class="form-control">
              <%App::CATEGORIES.each do |category| %>
                <option value=""><%= category %></option>
              <% end %>
            </select>
            <br>
            <input type="text" name="app[category]" id="type_category" placeholder="Custom category" class="form-control">
          </div>
  </div>

    <div class="col-md-6">
    <div class="form-group">
      <%= f.label 'Current address' %>
      <%= f.select :address, App::QAZAS, {}, {class: "form-control"} %><br>
    </div>
  </div>

      <div class="col-md-12">
    <div class="form-group">
        <%= f.label "Experience " %><br>
      <%= f.text_area :experience, class: "form-control", placeholder: "please provide the workplace, time period, and years of your experience"%>
    </div>
  </div>



        <div class="col-md-12">
          <div class="form-group"><br>
       <%= f.submit "Send Application", class: "btn btn-primary"%>
     </div>
   </div>

</div>

<% end %>

